module input_neuron #(
    INPUT_SIZE = 1 : INPUT_SIZE> 0   
)(
    input clk,
    input in[INPUT_SIZE],  
    input weights[INPUT_SIZE][8],
    output out[INPUT_SIZE][8]
    
) 


{
    sig temp[INPUT_SIZE][8]
   
    
    always {
        repeat(i, INPUT_SIZE){
            temp[i] = $resize($signed(in[i]),8) & weights[i]
        }
        
        
        
        out = temp
        
        
        
        
        

    }
}