module input_neuron #(
    INPUT_SIZE = 1 : INPUT_SIZE> 0   
)(

    input in[INPUT_SIZE],  
    input weights[INPUT_SIZE][16],
    output out[INPUT_SIZE][16]
    
) 


{
    sig temp[INPUT_SIZE][16]
   
    
    always {
        repeat(i, INPUT_SIZE){
            temp[i] = $resize($signed(in[i]),16) & weights[i]
        }
        
        
        
        out = temp
        
        
        
        
        

    }
}